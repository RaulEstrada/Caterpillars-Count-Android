<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <TextView
        android:id="@+id/herbivory_text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:layout_marginTop="5dp"
        android:text="1 - Trace, less than 5%"/>

    <LinearLayout
        android:id="@+id/ll_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/herbivory_text1"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/herbivory_spinner_left"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:background="@drawable/leaf_0herbivory_green"/>
            <!--android:src="@drawable/leaf_0herbivory_green"/> -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="to"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>
        <ImageView
            android:id="@+id/herbivory_spinner_right"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:background="@drawable/leaf_5pct_herbivory_green"/>
       <!-- android:src="@drawable/leaf_5pct_herbivory_green"/> -->
    </LinearLayout>

</RelativeLayout>